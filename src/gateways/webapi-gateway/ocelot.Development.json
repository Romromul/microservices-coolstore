{
  "ReRoutes": [
    // shopping cart service - grpc
    {
      "UpstreamPathTemplate": "/api/carts/{cartId}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/coolstore.ShoppingCart/GetCart",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 15003
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/carts",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/coolstore.ShoppingCart/InsertItemToNewCart",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 15003
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/carts",
      "UpstreamHttpMethod": [ "Put" ],
      "DownstreamPathTemplate": "/coolstore.ShoppingCart/UpdateItemInCart",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 15003
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/carts/{cartId}/checkout",
      "UpstreamHttpMethod": [ "Put" ],
      "DownstreamPathTemplate": "/coolstore.ShoppingCart/Checkout",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 15003
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/carts/{cartId}/items/{productId}",
      "UpstreamHttpMethod": [ "Delete" ],
